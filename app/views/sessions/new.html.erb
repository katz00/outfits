<% provide(:title, "ログイン") %>
<h1>ログイン</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
      <div class="form-group">
        <%= f.label 'メールアドレス' %>
        <%= f.email_field :email, class: 'form-control', id: 'user_email' %>
      </div>
      <div class="form-group">
        <%= f.label 'パスワード' %>
        <%= f.password_field :password, class: 'form-control', id: 'user_password' %>
      </div>
      <div class="check-box">
        <%= f.label remember_me, class: 'checkbox inline' do %>
          <%= f.check_box :remember_me%>
          <span>ログインしたままにする</span>
        <% end %>
      </div>
      <%= f.submit "ログイン", class: 'btn btn-primary' %>
    <% end %>
    <p>ユーザー登録されていない方は<%= link_to "こちら", signup_path %></p><br>
    パスワードをお忘れの方は<%= link_to "こちら", '#' %>
  </div>
</div>